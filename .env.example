# ===========================================
# Carbex - Carbon Footprint Calculator
# Environment Configuration
# ===========================================

APP_NAME=Carbex
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Europe/Paris
APP_URL=http://localhost:8000

APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# ===========================================
# Logging
# ===========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===========================================
# Database - PostgreSQL 17
# ===========================================
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=carbex
DB_USERNAME=carbex
DB_PASSWORD=secret

# ===========================================
# Redis - Cache, Queues, Sessions
# ===========================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

CACHE_STORE=redis
CACHE_PREFIX=carbex_

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

QUEUE_CONNECTION=redis

# ===========================================
# Meilisearch - Emission Factor Search
# ===========================================
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://127.0.0.1:7700
MEILISEARCH_KEY=masterKey

# ===========================================
# Broadcasting
# ===========================================
BROADCAST_CONNECTION=log

# ===========================================
# Filesystem
# ===========================================
FILESYSTEM_DISK=local

# ===========================================
# Mail - Mailpit for Local Development
# ===========================================
MAIL_MAILER=smtp
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@carbex.eu"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# Open Banking - Bridge (France)
# ===========================================
BRIDGE_CLIENT_ID=
BRIDGE_CLIENT_SECRET=
BRIDGE_SANDBOX=true
BRIDGE_WEBHOOK_SECRET=
BRIDGE_MOCK=true

# ===========================================
# Open Banking - Finapi (Germany)
# ===========================================
FINAPI_CLIENT_ID=
FINAPI_CLIENT_SECRET=
FINAPI_SANDBOX=true
FINAPI_MOCK=true

# ===========================================
# AI - Anthropic Claude API
# ===========================================
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MOCK=true

# ===========================================
# Billing - Stripe
# ===========================================
STRIPE_KEY=pk_test_xxx
STRIPE_SECRET=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs (from Stripe Dashboard)
STRIPE_PRICE_STARTER_MONTHLY=price_starter_monthly
STRIPE_PRICE_STARTER_YEARLY=price_starter_yearly
STRIPE_PRICE_PRO_MONTHLY=price_pro_monthly
STRIPE_PRICE_PRO_YEARLY=price_pro_yearly
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_enterprise_monthly
STRIPE_PRICE_ENTERPRISE_YEARLY=price_enterprise_yearly

CASHIER_CURRENCY=eur
CASHIER_CURRENCY_LOCALE=fr
CASHIER_PATH=stripe

# ===========================================
# AWS Services (Optional)
# ===========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-3
AWS_BUCKET=carbex-dev
AWS_USE_PATH_STYLE_ENDPOINT=false

# Textract OCR (Optional - for invoice scanning)
TEXTRACT_REGION=eu-west-1
TEXTRACT_ENABLED=false

# ===========================================
# Scaleway Object Storage (Production)
# ===========================================
SCALEWAY_ACCESS_KEY_ID=
SCALEWAY_SECRET_ACCESS_KEY=
SCALEWAY_DEFAULT_REGION=fr-par
SCALEWAY_BUCKET=

# ===========================================
# Security & Monitoring
# ===========================================
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# ===========================================
# Carbex Application Settings
# ===========================================
CARBEX_DEFAULT_COUNTRY=FR
CARBEX_SUPPORTED_COUNTRIES=FR,DE,BE,NL,AT,CH,ES,IT
CARBEX_TRIAL_DAYS=14
CARBEX_SYNC_INTERVAL_HOURS=1

# Emission Factor Sources
CARBEX_ADEME_API_KEY=
CARBEX_ADEME_API_URL=https://data.ademe.fr/data-fair/api/v1/datasets

# ===========================================
# Energy - Enedis DataConnect (Electricity)
# ===========================================
ENEDIS_ENABLED=true
ENEDIS_SANDBOX=true
ENEDIS_MOCK=true
ENEDIS_CLIENT_ID=
ENEDIS_CLIENT_SECRET=
ENEDIS_REDIRECT_URI=/energy/enedis/callback

# ===========================================
# Energy - GRDF ADICT (Gas)
# ===========================================
GRDF_ENABLED=true
GRDF_SANDBOX=true
GRDF_MOCK=true
GRDF_CLIENT_ID=
GRDF_CLIENT_SECRET=
GRDF_REDIRECT_URI=/energy/grdf/callback

# ===========================================
# Vite
# ===========================================
VITE_APP_NAME="${APP_NAME}"
